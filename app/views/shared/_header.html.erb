<section class="has-background-primary">
  <div>
    <nav class="navbar is-primary" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do%>
          <span class="has-text-weight-bold is-size-4 ml-4">
            Foodlog
          </span>
        <% end %>
      </div>
      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-end">
          <%= link_to new_entry_path, class: "button is-primary" do %>
            <span class="navbar-item">Create new entry</span>
          <% end %>
        </div>
      </div>
    </nav>
  </div>
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        <% if content_for(:title) %>
          <%= yield :title %>
        <% else %>
          <p class="is-size-2 has-text-weight-bold">FoodLog</p>
        <% end %>
      </h1>
    </div>
  </div>
</section>